{
    "private": true,
    "name": "desc",
    "workspaces": {
        "packages": [
            "packages/api",
            "packages/api-nestjs",
            "packages/app",
            "packages/app-mui",
            "packages/e2e"
        ],
        "nohoist": [
            "**/typeorm/**",
            "**/typeorm"
        ]
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "clean": "lerna clean",
        "dev": "lerna run dev --stream --scope @desc/api --scope @desc/app",
        "dev:api": "lerna run dev --stream --scope @desc/api",
        "dev:app": "lerna run start --stream --scope @desc/app",
        "lint:all": "lerna run lint --stream --scope @desc/api --scope @desc/app",
        "lint:api": "lerna run lint --stream --scope @desc/api",
        "lint:app": "lerna run lint --stream --scope @desc/app",
        "postinstall": "yarn bootstrap",
        "predev": "yarn container:start",
        "container:start": "ts-node scripts/container-start",
        "container:stop": "ts-node scripts/container-stop",
        "test:api": "lerna run test --stream --scope @desc/api",
        "test:app": "lerna run test --stream --scope @desc/app",
        "test:e2e": "lerna run test:e2e --stream",
        "prepare": "husky install"
    },
    "license": "MIT",
    "devDependencies": {
        "eslint": "8.23.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-prettier": "4.2.1",
        "husky": "8.0.1",
        "jest": "29.0.1",
        "lerna": "5.4.3",
        "prettier": "2.7.1",
        "pretty-quick": "3.1.3"
    },
    "engines": {
        "node": ">=14.16.0 <17.0.0",
        "yarn": ">=1.22.0"
    }
}
